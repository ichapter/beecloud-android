<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cn.beecloud.demo.PayPalUnSyncedListActivity">

    <TextView
        android:id="@+id/syncTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="All PayPal payments have been synced"
        android:textSize="20sp"
        android:textColor="#FF0000"
        android:visibility="gone"
        />

    <ListView
        android:id="@+id/unSyncedListView"
        android:layout_below="@id/syncTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/btnBatchSync"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:background="#007edf"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="批量同步订单"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_width="match_parent" />
</RelativeLayout>
